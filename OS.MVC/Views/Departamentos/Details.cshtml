@model IEnumerable<Departamento>

@{
    ViewData["Title"] = "Detalhes Departamentos";
}

<p>
    <a asp-controller="Funcionarios" asp-action="Create" class="btn btn-default">Adicionar Funcionario</a>
</p>

@foreach (var departamento in Model)
{
<div class="panel panel-primary">
    <div class="panel-heading text-center">
        <h3>Departamento @departamento.Descricao</h3>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr class="success">
                <th>
                    Funcionario
                </th>
                <th>
                    Cargo
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var funcionario in departamento.Funcionarios)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => funcionario.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => funcionario.Cargo)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
}